@model IEnumerable<BoutiqueEnLigne.Models.Produit>
@using BoutiqueEnLigne.Services

@{
    ViewData["Title"] = "Mes produits";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold mb-0">
            <i class="bi bi-grid me-2" style="color: var(--jumia-orange);"></i>
            Mes produits (@Model.Count())
        </h1>
        <a asp-action="AjouterProduit" class="btn btn-jumia-orange">
            <i class="bi bi-plus-circle me-2"></i>AJOUTER
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead style="background-color: var(--jumia-orange); color: white;">
                    <tr>
                        <th>Image</th>
                        <th>Titre</th>
                        <th>Catégorie</th>
                        <th>Prix</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var produit in Model)
                    {
                        <tr>
                            <td>
                                <img src="@produit.ImageUrl" alt="@produit.Titre"
                                     style="width: 60px; height: 60px; object-fit: contain;">
                            </td>
                            <td>
                                <strong>@produit.Titre</strong><br>
                                <small class="text-muted">@produit.Description.Substring(0, Math.Min(50, produit.Description.Length))...</small>
                            </td>
                            <td><span class="badge bg-secondary">@produit.Categorie</span></td>
                            <td class="fw-bold">@TranslationService.FormatPrice(produit.Prix)</td>
                            <td>
                                @if (produit.Stock > 0)
                                {
                                    <span class="badge bg-success">@produit.Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">0</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ModifierProduit" asp-route-id="@produit.Id"
                                   class="btn btn-sm btn-outline-primary me-2">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="SupprimerProduit" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@produit.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Supprimer ce produit ?')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: var(--jumia-gray);"></i>
            <h4 class="mt-3">Aucun produit</h4>
            <p class="text-muted">Commencez par ajouter votre premier produit</p>
            <a asp-action="AjouterProduit" class="btn btn-jumia-orange">
                <i class="bi bi-plus-circle me-2"></i>AJOUTER UN PRODUIT
            </a>
        </div>
    }
</div>