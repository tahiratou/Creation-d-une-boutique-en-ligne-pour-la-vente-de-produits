@model BoutiqueEnLigne.Models.Produit

@{
    ViewData["Title"] = "Ajouter un produit";
}

<div class="container py-4">
    <h1 class="fw-bold mb-4">
        <i class="bi bi-plus-circle me-2" style="color: var(--jumia-orange);"></i>
        Ajouter un produit
    </h1>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body p-4">
                    <form asp-action="AjouterProduit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Titre" class="form-label fw-semibold"></label>
                            <input asp-for="Titre" class="form-control" placeholder="Ex: Sac à dos en cuir" />
                            <span asp-validation-for="Titre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Décrivez votre produit en détail..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Prix" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <input asp-for="Prix" class="form-control" type="number" step="0.01" />
                                    <span class="input-group-text">$</span>
                                </div>
                                <span asp-validation-for="Prix" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Stock" class="form-label fw-semibold"></label>
                                <input asp-for="Stock" class="form-control" type="number" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Categorie" class="form-label fw-semibold"></label>
                            <select asp-for="Categorie" class="form-select">
                                <option value="">Sélectionnez une catégorie</option>
                                <option value="Électronique">Électronique</option>
                                <option value="Bijoux">Bijoux</option>
                                <option value="Vêtements homme">Vêtements homme</option>
                                <option value="Vêtements femme">Vêtements femme</option>
                            </select>
                            <span asp-validation-for="Categorie" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageUrl" class="form-label fw-semibold"></label>
                            <input asp-for="ImageUrl" class="form-control"
                                   placeholder="https://exemple.com/image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <small class="text-muted">URL de l'image du produit</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-jumia-orange py-3">
                                <i class="bi bi-check-circle me-2"></i>AJOUTER LE PRODUIT
                            </button>
                            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Retour
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}