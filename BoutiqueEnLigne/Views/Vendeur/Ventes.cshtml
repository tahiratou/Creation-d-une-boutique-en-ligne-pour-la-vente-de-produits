@model IEnumerable<BoutiqueEnLigne.Models.CommandeItem>
@using BoutiqueEnLigne.Services

@{
    ViewData["Title"] = "Mes ventes";
    var totalVentes = Model.Sum(v => v.PrixUnitaire * v.Quantite);
    var nombreVentes = Model.Count();
}

<div class="container py-4">
    <h1 class="fw-bold mb-4">
        <i class="bi bi-graph-up me-2" style="color: var(--jumia-orange);"></i>
        Historique de mes ventes
    </h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        </div>
    }

    <!-- Statistiques -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card text-center p-4" style="border-left: 4px solid var(--jumia-orange);">
                <i class="bi bi-cash-stack fs-1 mb-2" style="color: var(--jumia-orange);"></i>
                <h3 class="fw-bold">@TranslationService.FormatPrice(totalVentes)</h3>
                <p class="text-muted mb-0">Revenu total</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-center p-4" style="border-left: 4px solid #4caf50;">
                <i class="bi bi-cart-check fs-1 mb-2 text-success"></i>
                <h3 class="fw-bold">@nombreVentes</h3>
                <p class="text-muted mb-0">Articles vendus</p>
            </div>
        </div>
    </div>

    <!-- Liste des ventes -->
    @if (Model.Any())
    {
        <div class="card">
            <div class="card-header" style="background-color: var(--jumia-orange); color: white;">
                <h5 class="mb-0">Détails des ventes</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Produit</th>
                                <th>Client</th>
                                <th>Quantité</th>
                                <th>Prix unitaire</th>
                                <th>Total</th>
                                <th>Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vente in Model.OrderByDescending(v => v.Commande.DateCommande))
                            {
                                <tr>
                                    <td>
                                        <small>@vente.Commande.DateCommande.ToString("dd/MM/yyyy")</small><br>
                                        <small class="text-muted">@vente.Commande.DateCommande.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@vente.Produit.ImageUrl" alt="@vente.Produit.Titre"
                                                 style="width: 50px; height: 50px; object-fit: contain;" class="me-2">
                                            <div>
                                                <strong>@vente.Produit.Titre</strong><br>
                                                <small class="text-muted">@vente.Produit.Categorie</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <i class="bi bi-person me-1"></i>
                                        @vente.Commande.User?.Prenom @vente.Commande.User?.Nom<br>
                                        <small class="text-muted">@vente.Commande.User?.Email</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@vente.Quantite</span>
                                    </td>
                                    <td class="fw-bold">
                                        @TranslationService.FormatPrice(vente.PrixUnitaire)
                                    </td>
                                    <td class="fw-bold" style="color: var(--jumia-orange);">
                                        @TranslationService.FormatPrice(vente.PrixUnitaire * vente.Quantite)
                                    </td>
                                    <td>
                                        @if (vente.Commande.StatutPaiement == "Payé")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Payé
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="bi bi-clock me-1"></i>En attente
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: var(--jumia-gray);"></i>
            <h4 class="mt-3">Aucune vente pour le moment</h4>
            <p class="text-muted">Vos ventes apparaîtront ici lorsque des clients achèteront vos produits</p>
            <a asp-action="MesProduits" class="btn btn-jumia-orange mt-3">
                <i class="bi bi-grid me-2"></i>GÉRER MES PRODUITS
            </a>
        </div>
    }

    <!-- Bouton retour -->
    <div class="mt-4">
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Retour au tableau de bord
        </a>
    </div>
</div>
