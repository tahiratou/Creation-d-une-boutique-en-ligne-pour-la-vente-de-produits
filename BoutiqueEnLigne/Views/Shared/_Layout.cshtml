<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bag-check-fill me-2"></i>DevStore
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Produits" asp-action="Index">
                                <i class="bi bi-grid me-1"></i>Catalogue
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            var userRole = Context.Session.GetString("UserRole");

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @Context.Session.GetString("UserNom")
                                </a>
                                <ul class="dropdown-menu">
                                    @if (userRole == "Client")
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                                <i class="bi bi-person me-2"></i>Mon profil
                                            </a>
                                        </li>
                                    }
                                    else if (userRole == "Vendeur")
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Vendeur" asp-action="Dashboard">
                                                <i class="bi bi-speedometer2 me-2"></i>Tableau de bord
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Vendeur" asp-action="MesProduits">
                                                <i class="bi bi-grid me-2"></i>Mes produits
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Vendeur" asp-action="Ventes">
                                                <i class="bi bi-receipt me-2"></i>Mes ventes
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            @if (userRole == "Client")
                            {
                                <li class="nav-item">
                                    <a class="nav-link position-relative" asp-controller="Panier" asp-action="Index">
                                        <i class="bi bi-cart3"></i> Panier
                                        @await Component.InvokeAsync("PanierCount")
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-person"></i> Connexion
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Inscription
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-4">
                    <h5>À PROPOS</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Qui sommes-nous</a></li>
                        <li><a href="#">Carrières</a></li>
                        <li><a href="#">Conditions générales</a></li>
                        <li><a href="#">Politique de confidentialité</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>SERVICE CLIENT</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Centre d'aide</a></li>
                        <li><a href="#">Comment commander</a></li>
                        <li><a href="#">Livraison</a></li>
                        <li><a href="#">Retours & Remboursements</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>PAIEMENT</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Modes de paiement</a></li>
                        <li><a href="#">Paiement à la livraison</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>SUIVEZ-NOUS</h5>
                    <div class="d-flex gap-3">
                        <a href="#"><i class="bi bi-facebook fs-4"></i></a>
                        <a href="#"><i class="bi bi-twitter fs-4"></i></a>
                        <a href="#"><i class="bi bi-instagram fs-4"></i></a>
                        <a href="#"><i class="bi bi-youtube fs-4"></i></a>
                    </div>
                </div>
            </div>
            <hr style="border-color: #444;">
            <div class="text-center py-3">
                <p class="mb-0">&copy; 2025 - DevStore - Tous droits réservés</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>