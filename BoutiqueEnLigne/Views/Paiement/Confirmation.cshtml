@model BoutiqueEnLigne.Models.Commande
@using BoutiqueEnLigne.Services

@{
    ViewData["Title"] = "Commande confirmée - DevStore";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Bannière de succès -->
            <div class="text-center mb-5">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill" style="font-size: 5rem; color: #4caf50;"></i>
                </div>
                <h1 class="fw-bold text-success mb-2">Commande confirmée !</h1>
                <p class="lead text-muted">Merci pour votre achat, @Model.User?.Prenom !</p>
            </div>

            <!-- Numéro de facture -->
            <div class="card mb-4" style="border: 2px solid var(--jumia-orange);">
                <div class="card-body text-center p-4">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-receipt me-2" style="color: var(--jumia-orange);"></i>
                        Votre facture
                    </h5>
                    <h2 class="fw-bold" style="color: var(--jumia-orange);">
                        @Model.Facture?.NumeroFacture
                    </h2>
                    <p class="text-muted mb-0">
                        Date : @Model.DateCommande.ToString("dd/MM/yyyy à HH:mm")
                    </p>
                </div>
            </div>
            <!-- Télécharger la facture -->
            <div class="alert alert-info alert-static mb-4">

                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-file-earmark-pdf fs-4 me-3"></i>
                        <strong>Votre facture est disponible</strong>
                    </div>
                    <a asp-controller="Facture" asp-action="Telecharger" asp-route-id="@Model.Facture.Id"
                       class="btn btn-jumia-orange" target="_blank">
                        <i class="bi bi-download me-2"></i>TÉLÉCHARGER LA FACTURE
                    </a>
                </div>
            </div>

            <!-- Détails de la commande -->
            <div class="card mb-4">
                <div class="card-header" style="background-color: var(--jumia-orange); color: white;">
                    <h5 class="mb-0">Détails de la commande</h5>
                </div>
                <div class="card-body p-0">
                    @foreach (var item in Model.Items)
                    {
                        <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
                            <div>
                                <p class="mb-0 fw-semibold">@item.Produit?.Titre</p>
                                <small class="text-muted">
                                    Quantité : @item.Quantite × @TranslationService.FormatPrice(item.PrixUnitaire)
                                </small>
                            </div>
                            <span class="fw-bold">
                                @TranslationService.FormatPrice(item.PrixUnitaire * item.Quantite)
                            </span>
                        </div>
                    }
                    <div class="p-3">
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold fs-5">Total payé</span>
                            <span class="fw-bold fs-4" style="color: var(--jumia-orange);">
                                @TranslationService.FormatPrice(Model.MontantTotal)
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informations de paiement -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <i class="bi bi-shield-check fs-2 text-success mb-2 d-block"></i>
                            <h6 class="fw-bold">Statut</h6>
                            <span class="badge bg-success fs-6">@Model.StatutPaiement</span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="bi bi-credit-card fs-2 text-primary mb-2 d-block"></i>
                            <h6 class="fw-bold">ID Transaction</h6>
                            <small class="text-muted">@Model.StripePaymentIntentId</small>
                        </div>

                        <div class="col-md-4 mb-3">
                            <i class="bi bi-calendar-check fs-2" style="color: var(--jumia-orange);"></i>
                            <h6 class="fw-bold mt-2">Date</h6>
                            <small>@Model.DateCommande.ToString("dd/MM/yyyy")</small>
                        </div>
                        
                    </div>
                </div>
            </div>


            <!-- Actions -->
            <div class="d-flex gap-3 justify-content-center">
                <a asp-controller="Account" asp-action="Profile" class="btn btn-jumia-orange btn-lg">
                    <i class="bi bi-receipt me-2"></i>Voir mes commandes
                </a>
                <a asp-controller="Produits" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-grid me-2"></i>Continuer mes achats
                </a>
            </div>
        </div>
    </div>
</div>