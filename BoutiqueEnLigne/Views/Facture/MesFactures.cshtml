@model IEnumerable<BoutiqueEnLigne.Models.Facture>
@using BoutiqueEnLigne.Services

@{
    ViewData["Title"] = "Mes factures";
    var totalDepense = Model.Sum(f => f.Commande.MontantTotal);
}

<div class="container py-4">
    <h1 class="fw-bold mb-4">
        <i class="bi bi-receipt me-2" style="color: var(--jumia-orange);"></i>
        Mes factures
    </h1>

    <!-- Statistiques -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card text-center p-4" style="border-left: 4px solid var(--jumia-orange);">
                <i class="bi bi-wallet2 fs-1 mb-2" style="color: var(--jumia-orange);"></i>
                <h3 class="fw-bold">@TranslationService.FormatPrice(totalDepense)</h3>
                <p class="text-muted mb-0">Total dépensé</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-center p-4" style="border-left: 4px solid #4caf50;">
                <i class="bi bi-receipt-cutoff fs-1 mb-2 text-success"></i>
                <h3 class="fw-bold">@Model.Count()</h3>
                <p class="text-muted mb-0">Factures émises</p>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-header" style="background-color: var(--jumia-orange); color: white;">
                <h5 class="mb-0">Historique des factures</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>N° Facture</th>
                                <th>Date</th>
                                <th>Articles</th>
                                <th>Montant</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var facture in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@facture.NumeroFacture</strong>
                                    </td>
                                    <td>
                                        @facture.DateGeneration.ToString("dd/MM/yyyy")<br>
                                        <small class="text-muted">@facture.DateGeneration.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            @facture.Commande.Items.Count article(s)
                                        </span>
                                    </td>
                                    <td class="fw-bold" style="color: var(--jumia-orange);">
                                        @TranslationService.FormatPrice(facture.Commande.MontantTotal)
                                    </td>
                                    <td>
                                        @if (facture.Commande.StatutPaiement == "Payé")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Payé
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="bi bi-clock me-1"></i>En attente
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Telecharger" asp-route-id="@facture.Id"
                                           class="btn btn-sm btn-jumia-orange" target="_blank">
                                            <i class="bi bi-file-earmark-pdf me-1"></i>PDF
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: var(--jumia-gray);"></i>
            <h4 class="mt-3">Aucune facture</h4>
            <p class="text-muted">Vos factures apparaîtront ici après vos achats</p>
            <a asp-controller="Produits" asp-action="Index" class="btn btn-jumia-orange mt-3">
                <i class="bi bi-grid me-2"></i>DÉCOUVRIR NOS PRODUITS
            </a>
        </div>
    }
</div>